{% extends 'base.html.twig' %}

{% block title %}Important{% endblock %}

{% block body %}
    {{ parent() }}
{% endblock %}

{% block main %}

<h2 class="text-2xl font-extrabold m-[1rem]">Évènements importants</h2>
    
    <ul>
        {% for event in events_important %}
        <div class="event-wrapper">
        <h3><span class={{ event.getCategory().getName() }}-category >{{ event.getCategory().getName() }}</span> {{ event.getTitle }}</h3>
        <p>Horaire : {{ event.getTime()|date('H:i') }}</p>
        <p>{{ event.getdescription() }}</p>
    </div>
    {% endfor %}
    </ul>

{% endblock %}

